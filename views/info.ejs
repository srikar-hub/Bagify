<%- include('./partials/header') %> <% if(error.length>0){ %>
<div
  class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500"
>
  <span class="inline-block mt-1 mb-1 text-white"> <%= error %> </span>
</div>
<% } %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checkout - Your Order</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://ai-public.creatie.ai/gen_page/tailwind-custom.css"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com/3.4.5?plugins=forms@0.5.7,typography@0.5.13,aspect-ratio@0.4.2,container-queries@0.1.1"></script>
    <script
      src="https://ai-public.creatie.ai/gen_page/tailwind-config.min.js"
      data-color="#000000"
      data-border-radius="small"
    ></script>
  </head>
  <body class="bg-gray-50">
    <div class="min-h-screen">
      <div class="max-w-7xl mx-auto px-4 py-8">
        <div class="flex flex-col lg:flex-row gap-8">
          <div class="lg:w-2/3">
            <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <h2 class="text-lg font-semibold mb-2">Delivering Address</h2>
                  <p class="text-gray-700"><%= selectedAddress.fullName %></p>
                  <p class="text-gray-600"><%= selectedAddress.address %></p>
                  <p class="text-gray-600"><%= selectedAddress.state %></p>
                </div>
                <button class="text-custom hover:text-custom/80 font-medium">
                  Change
                </button>
              </div>
              <button class="text-custom hover:text-custom/80 text-sm">
                <i class="fas fa-plus mr-2"></i>Add delivery instructions
              </button>
            </div>

            <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
              <div class="flex justify-between items-center mb-4">
                <h2 class="text-lg font-semibold">Payment Method</h2>
                <button class="text-custom hover:text-custom/80 font-medium">
                  Change
                </button>
              </div>
              <div class="flex items-center gap-3 mb-4">
                <i class="fas fa-money-bill-wave text-gray-600"></i>
                <span>Pay on Delivery (Cash/Card)</span>
              </div>
              <button class="text-custom hover:text-custom/80 text-sm">
                <i class="fas fa-gift mr-2"></i>Use a gift card, voucher or
                promo code
              </button>
            </div>

            <div class="bg-white rounded-lg shadow-sm p-6">
              <div class="border-b pb-4 mb-4">
                <h2 class="text-lg font-semibold mb-2">
                  Arriving March 28, 2025
                </h2>
                <p class="text-sm text-gray-600">
                  Order within 27 minutes
                  <button class="text-custom hover:text-custom/80">
                    Details
                  </button>
                </p>
              </div>

              <div class="flex gap-6">
                <div class="w-32 h-32"></div>
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-2"></div>
                  <div class="flex items-baseline gap-2 mb-2"></div>
                  <div class="flex items-center gap-4 mb-2">
                    <div class="flex items-center"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="lg:w-1/3">
            <div class="bg-white rounded-lg shadow-sm p-6 sticky top-6">
              <button
                class="w-full bg-[#FFD814] hover:bg-[#F7CA00] text-black font-medium py-3 rounded-button mb-4"
              >
                Place your order
              </button>
              <p class="text-xs text-gray-600 mb-6">
                By placing your order, you agree to our
                <a href="#" class="text-custom hover:text-custom/80"
                  >privacy notice</a
                >
                and
                <a href="#" class="text-custom hover:text-custom/80"
                  >conditions of use</a
                >
              </p>
              <h3 class="text-lg font-semibold border-b pb-3 mb-4">
                Order Summary
              </h3>
              <div class="space-y-2 mb-4">
                <div class="flex justify-between">
                  <span class="text-gray-600">Items:</span> <span>$379.00</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Delivery:</span>
                  <span>$40.00</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Cash/Pay on Delivery fee:</span>
                  <span>$7.00</span>
                </div>
              </div>
              <div class="border-t pt-4 mb-4">
                <div class="flex justify-between text-green-600 mb-2">
                  <span>Savings (2):</span>
                  <span>-$43.79</span>
                </div>
                <div class="flex justify-between text-sm text-gray-600">
                  <span>Free Delivery</span> <span>-$40.00</span>
                </div>
                <div class="flex justify-between text-sm text-gray-600">
                  <span>Promotion Applied:</span>
                  <span>-$3.79</span>
                </div>
              </div>

              <div class="border-t pt-4">
                <div class="flex justify-between items-center">
                  <span class="text-lg font-semibold">Order Total:</span>
                  <span class="text-lg font-semibold">$382.21</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
<%- include('./partials/footer') %>

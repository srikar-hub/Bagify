<%- include('./partials/header') %>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Account</title>
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap"
    rel="stylesheet"
  />
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    rel="stylesheet"
  />

  <script src="https://cdn.tailwindcss.com/3.4.5?plugins=forms@0.5.7,typography@0.5.13,aspect-ratio@0.4.2,container-queries@0.1.1"></script>
</head>
<body class="bg-gray-50 font-[&#39;Inter&#39;]">
  <nav class="bg-white border-b border-gray-200">
    <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="flex-shrink-0 flex items-center"></div>
        </div>
        <div class="flex items-center">
          <button
            class="!rounded-button bg-custom text-white px-4 py-2 text-sm font-medium"
          >
            <i class="fas fa-sign-out-alt mr-2"></i>Logouts
          </button>
        </div>
      </div>
    </div>
  </nav>
  <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      <aside class="w-full lg:w-64 flex-shrink-0">
        <div class="bg-white rounded-lg shadow-sm">
          <nav class="space-y-1 p-4">
            <a
              href="#"
              class="flex items-center px-4 py-3 text-sm font-medium text-custom bg-gray-50 rounded-lg"
            >
              <i class="fas fa-user-circle mr-3"></i>
              Account Overview
            </a>
          </nav>
        </div>
      </aside>
      <main class="flex-1">
        <div class="mb-8">
          <h1 class="text-2xl font-semibold text-gray-900">
            <% if (user && user.fullname) { %> Welcome back, <%= user.fullname
            %> <% } else { %> User not found! <% } %>
          </h1>
          <p class="mt-2 text-sm text-gray-600">
            Manage your account settings and preferences
          </p>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4">
              Personal Information
            </h2>
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700"
                  >Full Name</label
                >
                <div class="mt-1 text-sm text-gray-900">
                  <%= user.fullname %>
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700"
                  >Email Address</label
                >
                <div class="mt-1 text-sm text-gray-900"><%= user.email %></div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700"
                  >Phone Number</label
                >
                <div class="mt-1 text-sm text-gray-900">+1 (555) 123-4567</div>
              </div>
              <button
                class="!rounded-button mt-4 bg-custom text-white px-4 py-2 text-sm font-medium"
              >
                Edit Information
              </button>
            </div>
          </div>
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4">
              Address Information
            </h2>
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700"
                  >Shipping Address</label
                >
                <div class="mt-1 text-sm text-gray-900">
                  <div class="mt-1 text-sm text-gray-900">
                    <% if (user.address.length > 0) { %> <%=
                    user.address[0].fullName %><br />
                    <%= user.address[0].address %><br />
                    Apt <%= user.address[0].pincode %><br />
                    <%= user.address[0].city %>, <%= user.address[0].state %>
                    <br />
                    India <% } else { %>
                    <p>No address found.</p>
                    <% } %>
                  </div>
                </div>
              </div>
              <button
                class="!rounded-button mt-4 bg-custom text-white px-4 py-2 text-sm font-medium"
              >
                Edit Address
              </button>
            </div>
          </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-medium text-gray-900">Orders</h3>
              <i class="fas fa-shopping-cart text-gray-400"></i>
            </div>
            <p class="mt-2 text-2xl font-semibold text-custom">12</p>
            <p class="mt-1 text-sm text-gray-600">Total Orders</p>
          </div>
          <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-medium text-gray-900">Wishlist</h3>
              <i class="fas fa-heart text-gray-400"></i>
            </div>
            <p class="mt-2 text-2xl font-semibold text-custom">5</p>
            <p class="mt-1 text-sm text-gray-600">Saved Items</p>
          </div>
          <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-medium text-gray-900">Reviews</h3>
              <i class="fas fa-star text-gray-400"></i>
            </div>
            <p class="mt-2 text-2xl font-semibold text-custom">8</p>
            <p class="mt-1 text-sm text-gray-600">Product Reviews</p>
          </div>
          <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-medium text-gray-900">Points</h3>
              <i class="fas fa-gift text-gray-400"></i>
            </div>
            <p class="mt-2 text-2xl font-semibold text-custom">250</p>
            <p class="mt-1 text-sm text-gray-600">Reward Points</p>
          </div>
        </div>
      </main>
    </div>
  </div>
</body>

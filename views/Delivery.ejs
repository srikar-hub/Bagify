<%- include('./partials/header') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Select a delivery address</title>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <div class="max-w-8xl mx-auto px-4 py-8">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-2xl font-bold mb-8">Select a delivery address</h1>

        <div class="space-y-4 mb-8">
          <% user.address.forEach(function(each, index) { %>
          <div class="bg-white border rounded-lg p-6 relative hover:shadow-md">
            <div class="pl-8">
              <p class="font-bold mb-1"><%= each.fullName %></p>
              <p class="text-gray-700 mb-1"><%= each.address %></p>
              <p class="text-gray-700 mb-1">
                <%= each.city %>, <%= each.state %> <%= each.pincode %>
              </p>
              <p class="text-gray-700 mb-3">Phone: <%= each.mobile %></p>
              <div class="space-x-4">
                <a href="/buynow" class="text-custom hover:underline"
                  >Edit address</a
                >
                <a href="#" class="text-custom hover:underline"
                  >Add delivery instructions</a
                >
                <a href="proceed/<%=each._id%>">Select</a>
              </div>
            </div>
          </div>
          <% }) %>
        </div>

        <div class="border-t pt-6 space-y-4 mb-8">
          <a href="/buynow" class="block text-custom hover:underline">
            <i class="fas fa-plus mr-2"></i>Add a new delivery address
          </a>
          <a href="#" class="block text-custom hover:underline">
            <i class="fas fa-truck mr-2"></i>Deliver to multiple addresses
          </a>
        </div>

        <button
          class="w-full bg-custom text-white py-3 font-semibold !rounded-button hover:bg-custom/90 transition-colors"
        >
          Deliver to this address
        </button>
      </div>
    </div>
  </body>
</html>

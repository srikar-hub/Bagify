<%- include('./partials/header') %> <% if (error && error.length > 0) { %>
<div
  id="flash-message-error"
  class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500"
>
  <span class="text-white"><%= error[0] %></span>
</div>
<% } %> <% if (success && success.length > 0) { %>
<div
  id="flash-message-success"
  class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-green-500"
>
  <span class="text-white"><%= success[0] %></span>
</div>
<% } %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Checkout</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100">
    <div class="max-w-6xl mx-auto p-4">
      <h1 class="text-2xl font-bold mb-4">Checkout</h1>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Address Form -->
        <div class="md:col-span-2 bg-white p-6 rounded-lg shadow-lg">
          <h2 class="text-xl font-semibold mb-4">
            Enter a new shipping address
          </h2>

          <form action="/submit-address" method="POST" class="space-y-4">
            <input
              type="text"
              name="fullName"
              placeholder="Full Name"
              class="block w-full p-2 border rounded-lg"
              required
            />

            <input
              type="text"
              name="mobile"
              placeholder="Mobile Number"
              class="block w-full p-2 border rounded-lg"
              required
            />

            <input
              type="text"
              name="pincode"
              placeholder="Pincode"
              class="block w-full p-2 border rounded-lg"
              required
            />

            <textarea
              name="address"
              placeholder="Address"
              class="block w-full p-2 border rounded-lg"
              required
            ></textarea>

            <input
              type="text"
              name="city"
              placeholder="City"
              class="block w-full p-2 border rounded-lg"
              required
            />

            <select name="state" class="block w-full p-2 border rounded-lg">
              <option disabled selected>Select a state</option>
              <option>Telanaga</option>
              <option>Andra Pradesh</option>
              <option>Manipur</option>
            </select>

            <button
              type="submit"
              class="w-full bg-yellow-500 text-white p-2 rounded-lg"
            >
              Use this Address
            </button>
          </form>
        </div>

        
      </div>
    </div>
  </body>
</html>

<%- include('./partials/header') %>

<% if(success.length > 0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full min-h-screen flex items-start px-20 py-10 bg-gray-100">
    <!-- Sidebar -->
    <div class="w-[25%] flex flex-col gap-10">
        <div class="flex items-center gap-2">
            <h3 class="text-lg font-semibold">Sort By</h3>
            <form action="/shop">
                <select class="border border-gray-300 rounded px-3 py-1 focus:outline-none focus:ring-2 focus:ring-blue-400" name="sortby">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        <div class="flex flex-col gap-2">
            <h4 class="text-md font-semibold mb-2">Categories</h4>
            <a class="block text-gray-600 hover:text-blue-500" href="">New Collection</a>
            <a class="block text-gray-600 hover:text-blue-500" href="">All Products</a>
            <a class="block text-gray-600 hover:text-blue-500" href="">Discounted Products</a>
        </div>
        <div class="flex flex-col gap-2 mt-10">
            <h4 class="text-md font-semibold mb-2">Filter By</h4>
            <a class="block text-gray-600 hover:text-blue-500" href="">Availability</a>
            <a class="block text-gray-600 hover:text-blue-500" href="">Discount</a>
        </div>
    </div>

    <!-- Product Grid -->
    <div class="w-[75%] grid grid-cols-4 gap-6">
        <% products.forEach(function(product){ %>
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <!-- Product Image -->
                <div class="w-full h-52 flex items-center justify-center" style="background-color:<%= product.bgcolor %>;">
                    <img class="h-[10rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                </div>
                <!-- Product Details -->
                <div class="flex justify-between items-center px-4 py-4" 
                     style="background-color: <%= product.panelcolor %>; color: <%= product.textcolor %>;">
                    <div>
                        <h3 class="font-semibold text-lg"><%= product.name %></h3>
                        <h4 class="text-sm">â‚¹ <%= product.price %></h4>
                    </div>
                    <!-- Add to Cart Form -->
                    <form action="/addtocart/<%= product._id %>" method="POST" class="flex items-center gap-2">
                        <input type="number" name="quantity" value="1" min="1" class="border border-gray-300 rounded px-3 py-1 w-16">
                        <button type="submit" class="w-8 h-8 flex items-center justify-center rounded-full bg-white text-black shadow hover:bg-gray-200">
                           Add
                        </button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('./partials/footer') %>
